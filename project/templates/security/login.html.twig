{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="canonical" href="{{ asset('https://getbootstrap.com/docs/5.0/examples/sign-in/') }}" />
    <link rel="stylesheet" href="{{ asset('/css/signin.css') }}" />
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main class="form-signin">
  <form method="post">
    <img class="mb-4" src="{{ asset('/images/login.png') }}" alt="" width="70" height="70">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating" style="padding-bottom: 1em;">
      <input type="text" class="form-control" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username" required autofocus placeholder="name@example.com">
      <label for="floatingInput">Username</label>
    </div>
    <div class="form-floating">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>
    <div class="form-floating">
      <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>
   
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    />

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">Â© 2022-2022</p>
  </form>
</main>

{% endblock %}
